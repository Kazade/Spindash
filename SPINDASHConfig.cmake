FIND_PATH( SPINDASH_INCLUDE_DIRS spindash/spindash.h /usr/include /usr/local/include $ENV{INCLUDE} )
FIND_LIBRARY( SPINDASH_LIBRARIES NAMES spindash PATHS /usr/lib /usr/local/lib )

IF(SPINDASH_INCLUDE_DIRS)
        MESSAGE(STATUS "Found Spindash include dir: ${SPINDASH_INCLUDE_DIRS}")
ELSE(SPINDASH_INCLUDE_DIRS)
        MESSAGE(STATUS "Could NOT find Spindash headers.")
ENDIF(SPINDASH_INCLUDE_DIRS)

IF(SPINDASH_LIBRARIES)
        MESSAGE(STATUS "Found Spindash library: ${SPINDASH_LIBRARIES}")
ELSE(SPINDASH_LIBRARIES)
        MESSAGE(STATUS "Could NOT find Spindash library.")
ENDIF(SPINDASH_LIBRARIES)

IF(SPINDASH_INCLUDE_DIRS AND SPINDASH_LIBRARIES)
        SET(SPINDASH_FOUND "YES")
ELSE(SPINDASH_INCLUDE_DIRS AND SPINDASH_LIBRARIES)
        SET(SPINDASH_FOUND "NO")
        IF(SPINDASH_FIND_REQUIRED)
                MESSAGE(FATAL_ERROR "Could not find Spindash. Please install Spindash (http://github.com/kazade/spindash)")
        ENDIF(SPINDASH_FIND_REQUIRED)
ENDIF(SPINDASH_INCLUDE_DIRS AND SPINDASH_LIBRARIES)
