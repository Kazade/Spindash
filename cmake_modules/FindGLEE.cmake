FIND_PATH( GLEE_INCLUDE_DIRS GLee.h /usr/include /usr/local/include /usr/include/GL $ENV{INCLUDE} )
FIND_LIBRARY( GLEE_LIBRARIES NAMES GLee glee PATHS /usr/lib /usr/local/lib )

IF(GLEE_INCLUDE_DIRS)
	MESSAGE(STATUS "Found GLEE include dir: ${GLEE_INCLUDE_DIRS}")
ELSE(GLEE_INCLUDE_DIRS)
	MESSAGE(STATUS "Could NOT find GLEE headers.")
ENDIF(GLEE_INCLUDE_DIRS)

IF(GLEE_LIBRARIES)
	MESSAGE(STATUS "Found GLEE library: ${GLEE_LIBRARIES}")
ELSE(GLEE_LIBRARIES)
	MESSAGE(STATUS "Could NOT find GLEE library.")
ENDIF(GLEE_LIBRARIES)

IF(GLEE_INCLUDE_DIRS AND GLEE_LIBRARIES)
	SET(GLEE_FOUND "YES")
ELSE(GLEE_INCLUDE_DIRS AND GLEE_LIBRARIES)
	SET(GLEE_FOUND "NO")
	IF(GLEE_FIND_REQUIRED)
		MESSAGE(FATAL_ERROR "Could not find GLEE. Please install GLEE")
	ENDIF(GLEE_FIND_REQUIRED)
ENDIF(GLEE_INCLUDE_DIRS AND GLEE_LIBRARIES)
